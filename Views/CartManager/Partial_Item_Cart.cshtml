@model IEnumerable<ShopOnline.Models.EF.CartItem>
@using ShopOnline.Common

<table class="table">
    <tr class="text-center">
        <th>STT</th>
        <th>Ảnh sản phẩm</th>
        <th>Tên sản phẩm</th>
        <th>Danh mục</th>
        <th>Giá</th>
        <th style="width: 100px">Số lượng</th>
        <th>Thành tiền</th>
        <th style="width: 200px"></th>
    </tr>
    @if (Model != null && Model.Any())
    {
        var i = 1;
        var total = decimal.Zero;
        foreach (var item in Model)
        {
            total += item.TotalPrice;
            <tr class="text-center" id="trow_@item.ProductId">
                <td>@(i)</td>
                <td><img src="@item.Product.Image" width="60" /></td>
                <td class="text-left">
                    <a href="/chi-tiet/@item.Product.Alias-@(item.ProductId)">
                        @item.Product.Alias
                    </a>
                </td>
                <td>@item.Product.ProductCategory.Alias</td>
                <td>@Common.FormatNumber(item.Product.Alias, 0)</td>
                <td><input type="number" id="Quantity_@item.ProductId" value="@item.Quantity" min="1" class="form-control" /></td>
                <th style="text-align: right;">@Common.FormatNumber(item.TotalPrice, 2)</th>
                <td>
                    @* data-id: lưu trữ một giá trị định danh (ID) cho một phần tử HTML. -> JS để truy cập giá trị "data-id" *@
                    <a href="#" data-id="@item.ProductId" class="btn btn-sm btn-danger btnDelete">Xóa</a>
                    <a href="#" data-id="@item.ProductId" class="btn btn-sm btn-success btnUpdate">Cập nhật</a>
                </td>
            </tr>
            i++;
        }
        <tr>
            <th colspan="6" class="text-right">Tổng: </th>
            <th class="text-center">@Common.FormatNumber(total, 0)</th>
            <th></th>
        </tr>
        <tr>
            <th colspan="6" class="text-right"></th>
            <th></th>
            <th class="text-center">
                <a href="#" class="btn btn-danger btnDeleteAll">Xóa</a>
                <a href="/thanh-toan" class="btn btn-success">Thanh toán</a>
            </th>
        </tr>
    }
    else
    {
        <tr>
            <th colspan="7">Không có sản phẩm trong giỏ hàng.</th>
        </tr>
    }
</table>
