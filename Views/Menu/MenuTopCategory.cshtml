@model IEnumerable<ShopLearning.Models.EF.ProductCategory>
@{
    ViewBag.Title = "_MenuArrivals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model != null && Model.Any())
{
    var i = 0;
    <div class="banner">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    i++;
                    if (i <= 3)
                    {
                    <div class="col-md-4">
                        <div class="banner_item align-items-center" style="background-image:url(@item.Icon)">
                            <div class="banner_category">
                                <a href="@item.Alias">@item.Title</a>
                            </div>
                        </div>
                    </div>
                    }
                }
            </div>
        </div>
    </div>
}
