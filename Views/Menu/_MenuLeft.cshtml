@*xác định rằng kiểu mô hình (model) của trang web là một danh sách các đối tượng ProductCategory.*@
@model IEnumerable<ShopOnline.Models.EF.ProductCategory>

@if (Model != null && Model.Any())
{
    <ul class="sidebar_categories">
        @foreach (var item in Model)
        {
            if (ViewBag.CateId == item.Id)
            {
                <li class="active"><a href="/danh-muc-san-pham/@item.Alias-p@(item.Id)"><span><i class="fa fa-angle-double-right" aria-hidden="true"></i></span>@item.Title</a></li>
            }
            else
            {
                <li><a href="/danh-muc-san-pham/@item.Alias-p@(item.Id)">@item.Title</a></li>
            }
        }
    </ul>
}
