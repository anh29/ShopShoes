@{
    ViewBag.Title = "Reset password confirmation";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">

<div class="container" style="margin-top: 180px;">
    <div class="row">
        <div class="col-md-12">
            <hgroup class="title">
                <h2>@ViewBag.Title.</h2>
            </hgroup>
            <div>
                @if (!string.IsNullOrEmpty(ViewBag.UserNotFoundMessage))
                {
                    <p>User not found or email not confirmed.</p>
                }
                else
                {
                    <p>
                        Your password has been reset. Please @Html.ActionLink("click here to log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
                    </p>
                }
            </div>
        </div>
    </div>
</div>