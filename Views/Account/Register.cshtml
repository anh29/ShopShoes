@model ShopOnline.Models.CreateAccountViewModel
@{
    ViewBag.Title = "Register";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">

<div class="container" style="margin-top: 180px;">
    <div class="row">
        <div class="col-md-12">
            <h2>@ViewBag.Title.</h2>

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @Id = "myForm" }))
            {
                @Html.ValidationSummary(false);
                @Html.AntiForgeryToken()
                @Html.HiddenFor(x => x.Role, new { @Value = "Customer" })
                <div class="form-group">
                    <label>Tài khoản</label>
                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @name = "UserName" })
                </div>
                <div class="form-group">
                    <label>Họ tên</label>
                    @Html.TextBoxFor(x => x.FullName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Email</label>
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @name = "Email" })
                </div>
                <div class="form-group">
                    <label>Địa chỉ</label>
                    @Html.TextBoxFor(x => x.Address, new { @class = "form-control", @name = "Address" })
                </div>
                <div class="form-group">
                    <label>Phone</label>
                    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", @name = "Phone" })
                </div>
                <div class="form-group">
                    <label>Mật khẩu</label>
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Nhập lại mật khẩu</label>
                    @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Thêm mới</button>
                </div>
            }
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {

            $('#myForm').validate({
                rules: {
                    'UserName': {
                        required: true
                    },
                    'Phone': {
                        required: true
                    },
                    'Email': {
                        required: true,
                        email: true
                    }
                }
            });
        });
    </script>
}