@model ShopOnline.Models.EF.Category
@{
    ViewBag.Title = "Cập nhật danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@section naviheader {
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/statistical" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/category" class="nav-link">Danh mục</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Cập nhật</a>
        </li>
    </ul>
}

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin danh mục</h3>
        </div>
        <div class="card-body">

            <div class="bs-stepper-content">
                @using (Html.BeginForm("Edit", "Category", FormMethod.Post, new { }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(x => x.Id)
                    @Html.HiddenFor(x => x.UserId, new { Value = User.Identity.Name })
                    @Html.HiddenFor(x => x.Alias)
                    @Html.HiddenFor(x => x.CreatedDate)
                    <!-- your steps content here -->
                    <div id="logins-part" class="content" role="tabpanel" aria-labelledby="logins-part-trigger">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Tên danh mục mới</label>
                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @placeholder = "Tên danh mục" }) @*trị của trường này thay đổi, giá trị của thuộc tính Title cũng sẽ thay đổi theo.*@
                            @Html.ValidationMessageFor(x => x.Title, null, new { @class = "text-danger" }) @*để hiển thị thông báo lỗi liên quan đến một trường nhập liệu.*@
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Mô tả</label>
                            @Html.TextAreaFor(x => x.Description, new { @class = "form-control" }) @*tạo ra một trường nhập liệu kiểu văn bản nhiều dòng (textarea) trong form.*@
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Thứ tự</label>
                            @Html.TextBoxFor(x => x.Position, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <a href="/admin/category" class="btn btn-danger">Quay lại</a>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                }
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->