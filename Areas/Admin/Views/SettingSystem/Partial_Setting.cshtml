@using ShopLearning.Models.Common
@using (Ajax.BeginForm("AddSetting", "SettingSystem", new AjaxOptions
{
    OnBegin = "OnBegin",
    OnSuccess = "OnSuccess",
    OnFailure = "OnFailure"
}))
{
    <script>
        function OnBegin(rs) {
            $('#load_page').html('Đang lưu ....');
        }
        function OnSuccess(rs) {
            $('#load_page').html('');
        }
        function OnFailure(rs) {

        }
    </script>
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <form>
            <div class="card">
                <div class="card-header p-2">
                    <ul class="nav nav-pills">
                        <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Thông tin chung</a></li>
                        <li class="nav-item"><a class="nav-link" href="#settingSeo" data-toggle="tab">SEO</a></li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="tab-content">
                        <div class="active tab-pane" id="activity">
                            <div class="form-group">
                                <label>Tiêu đề trang</label>
                                <input type="text" name="SettingTitle" class="form-control" value="@SettingHelper.GetValue("SettingTitle")" />
                            </div>
                            <div class="form-group">
                                <label>Logo</label>
                                <div class="input-group">
                                    <div class="custom-file">
                                        <input type="text" value="@SettingHelper.GetValue("SettingLogo")" name="SettingLogo" id="SettingLogo" class="form-control" />
                                    </div>
                                    <div class="input-group-append">
                                        <input type="button" value="Tải ảnh" onclick="BrowseServer('SettingLogo');" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>HotLine</label>
                                <input type="text" value="@SettingHelper.GetValue("SettingHotLine")" name="SettingHotLine" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input type="text" value="@SettingHelper.GetValue("SettingEmail")" name="SettingEmail" class="form-control" />
                            </div>

                        </div>
                        <div class="tab-pane" id="settingSeo">
                            <div class="form-group">
                                <label>Tiêu đề Seo</label>
                                <input type="text" value="@SettingHelper.GetValue("SettingTitleSeo")" name="SettingTitleSeo" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Mô tả Seo</label>
                                <textarea name="SettingDesSeo" class="form-control" cols="5">@SettingHelper.GetValue("SettingDesSeo")</textarea>
                            </div>
                            <div class="form-group">
                                <label>Từ khóa Sale</label>
                                <textarea name="SettingKeySeo" class="form-control" cols="5">@SettingHelper.GetValue("SettingKeySeo")</textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Thêm mới</button>
                </div>
            </div>
    </form>
}

