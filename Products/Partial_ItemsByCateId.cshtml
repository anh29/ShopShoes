@model IEnumerable<ShopLearning.Models.EF.Product>
@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {
        var strImg = "";
        var img = item.ProductImage.FirstOrDefault(x => x.IsDefault);
        if (img != null)
        {
            strImg = img.Image;
        }
        <div class="product-item @item.ProductCategories.Alias">
            <div class="product discount product_filter">
                <div class="product_image">
                    <img src="@strImg" alt="@item.Title">
                </div>
                <div class="favorite favorite_left"></div>
                    <h6 class="product_name"><a href="/chi-tiet/@item.Alias-p@(item.Id)">@item.Title</a></h6>
                    @if (item.PriceSale > 0)
                    {
                        <div class="product_price">@ShopLearning.Models.Common.Common.FormatNumber(item.Price, 0)<span>$590.00</span></div>
                    }
                    else
                    {
                        <div class="product_price">@ShopLearning.Models.Common.Common.FormatNumber(item.Price, 0)</div>
                    }
                </div>
            </div>
            <div class="red_button add_to_cart_button"><a href="#" class="btnAddToCart" data-id="@item.Id">add to cart</a></div>
    }
}
